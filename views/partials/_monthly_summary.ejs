<h3 class="text-lg font-medium text-gray-900 mb-4">
  Podsumowanie miesiąca
  <span
    class="inline-flex items-center rounded-md bg-blue-100 px-2 py-1 text-base font-medium text-blue-700">
    <%= summaryData.requiredMonthlyHours %>h
  </span>
</h3>
<div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
  <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
    <div class="text-sm text-gray-500 mb-1">Przepracowane godziny</div>
    <div class="text-xl font-semibold text-gray-900">
      <%= summaryData.totalWorkHours %>h
    </div>
  </div>
  <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
    <div class="text-sm text-gray-500 mb-1">Dni urlopowe</div>
    <div class="text-xl font-semibold text-gray-900">
      <%= summaryData.holidayCount %> dni <% if (typeof
      summaryData.totalHolidayHours !== 'undefined') { %>(<%=
      summaryData.totalHolidayHours %>h)<% } %>
    </div>
  </div>
  <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200">
    <div class="text-sm text-gray-500 mb-1">Razem</div>
    <div class="text-xl font-semibold text-gray-900">
      <%= summaryData.totalCombinedHours %>h
    </div>
  </div>
</div>
<div class="mt-4 bg-white rounded-lg p-4 shadow-sm border border-gray-200">
  <div class="flex justify-between items-center">
    <div>
      <div class="text-sm text-gray-500 mb-1">
        Pozostało do przepracowania w tym miesiącu
      </div>
      <div class="text-xl font-semibold text-gray-900">
        <%= summaryData.remainingHours %>h
      </div>
    </div>
    <div class="w-1/2 bg-gray-200 rounded-full h-4">
      <% let percent = 0; if (typeof summaryData !== 'undefined' && summaryData
      && typeof summaryData.totalCombinedHours === 'number' && typeof
      summaryData.requiredMonthlyHours === 'number') { percent =
      summaryData.requiredMonthlyHours > 0 ? Math.min(100,
      Math.round((summaryData.totalCombinedHours /
      summaryData.requiredMonthlyHours) * 100)) : 0; } %>
      <div
        class="bg-blue-500 h-4 rounded-full"
        style="width: <%= percent %>%"></div>
    </div>
  </div>
</div>
<% if (typeof showHolidayLink !== 'undefined' && showHolidayLink) { %>
<div class="mt-4 text-right">
  <a
    href="/holidays"
    class="text-blue-600 hover:text-blue-900 text-sm font-medium">
    Zarządzaj urlopami →
  </a>
</div>
<% } %>
